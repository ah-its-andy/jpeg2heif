# Required: one or more absolute directories, comma-separated
WATCH_DIRS=/data/images

# SQLite database path
DB_PATH=/data/tasks.db

# Log level: DEBUG/INFO/WARNING/ERROR
LOG_LEVEL=INFO

# Seconds
POLL_INTERVAL=1
METADATA_STABILITY_DELAY=1

# Workers and quality
MAX_WORKERS=4
CONVERT_QUALITY=90

# HTTP
HTTP_PORT=8000

# Metadata
PRESERVE_METADATA=true

# MD5 chunk size in bytes
MD5_CHUNK_SIZE=4194304
